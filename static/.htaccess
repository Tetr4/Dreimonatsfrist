AddDefaultCharset UTF-8
RewriteEngine on
RewriteBase /kalender

# enforce trailing slash so "kalender/2" is redirected to "kalender/2/"
RewriteCond %{REQUEST_URI} !(/$|\.)
RewriteRule (.*) %{REQUEST_URI}/ [R=301,L]

# replace "/kalender/123/" with "kalender/index.html"
RewriteRule ^[0-9]+/$ calendar.html

# replace "/kalender/123/entries.json" with "kalender/entries.php?user_id=123"
RewriteRule ^([0-9]+)/entries.json$ entries.php?user_id=$1

# replace "/kalender/123/xyz.png" with "kalender/xyz.png"
RewriteRule ^[0-9]+/(.+)$ $1
